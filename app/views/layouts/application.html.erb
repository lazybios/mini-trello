<!DOCTYPE html> <html>
    <head>
        <title>MiniTrello</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>
        <header>
            <a href="" class="logo" >
                MiniTrello
            </a>

            <div class="header_nav">
                <% if current_user %>
                    <%= current_user.username %>  <%= link_to "登出", :logout, method: "delete" %> <%= link_to "我的看板", :boards %> <%= link_to "动态", :activities %>
                <% else %>
                    <%= link_to "登录", :login %> <%= link_to "注册", :signup %>
                <% end %>
            </div>
        </header>
        <%= yield %>
        <footer>
            <p>&copy; 2015 lazybios.com<p>
        </footer>
    </body>
</html>
